<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huyvo.cmpe277.sjsu.weatherapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WeatherApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBMJSt7_3koa-jndHAzb6FYKleRAHtTpnY" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CityListViewActivity"
            android:label="@string/title_activity_weather_city_list_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.BaseActivityWithFragment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.huyvo.cmpe277.sjsu.weatherapp.activities.BaseActivityWithFragment" />
        </activity>

        <service
            android:name=".FetchWeatherIntentService"
            android:exported="false" />

    </application>

</manifest>